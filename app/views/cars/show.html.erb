<h1>Cars#show</h1>
<p><% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %></p>
<%=link_to "Anasayfa'ya Dön", cars_path%>
<p><%=label_tag("Marka:")%><%=@car.make%></p>
<p><%=label_tag("Model:")%><%=@car.model%></p>
<p><%=label_tag("Yıl:")%><%=@car.year%></p>
<p><%=label_tag("Kapı Sayısı:")%><%=@car.doors_count%></p>
<p><%=label_tag("VIN:")%><%=@car.vin%></p>
<p><%=label_tag("Fiyat:")%><%=@car.price%></p>
<p><%=label_tag("Durum:")%><%=@car.rented%></p>
<p><%=link_to("Sil", {:action=>"delete", :id=>@car.id}, :class=>"action delete")%></p>


